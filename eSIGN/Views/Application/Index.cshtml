@{
    ViewData["Title"] = "Application";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Application</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Application</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @* <div class="col-md-1"></div> *@

                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Create Application</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="userRequirement"><span style="color: red">*</span> User Requirement</label>
                                    <select class="form-select" id="userRequirement">
                                        <option>Improvement</option>
                                        <option>New development</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="isThisFor">
                                        <span style="color: red">*</span> Is this
                                        for
                                    </label>
                                    <select class="form-select" id="isThisFor">
                                        <option>Me</option>
                                        <option>Another existing employee</option>
                                    </select>
                                </div>
                                
                                <div class="row">
                                    <div class="col-sm-6">
                                        <!-- select -->
                                        <div class="form-group">
                                            <label for="employee">
                                                <span style="color: red">*</span>
                                                Employee
                                            </label>
                                            <select class="form-select" id="employee">
                                                <option>Me</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="manager"><span style="color: red">*</span> Manager</label>
                                            <input type="text" class="form-control" id="manager"
                                                   placeholder="Manager" disabled>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="requestedBy"><span style="color: red">*</span> Requested
                                        by</label>
                                    <input type="text" class="form-control" id="requestedBy"
                                        placeholder="Requested by">
                                </div>
                                <div class="form-group">
                                    <label for="system"> System</label>
                                    <select class="form-control" id="system">
                                        <option>Me</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="systemOwner"> System Owner</label>
                                    <select class="form-control" id="system">
                                        <option>Me</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="bussinessJustification"><span style="color: red">*</span> Bussiness
                                        Justification</label>
                                    <textarea class="form-control" rows="3" placeholder="Enter ..." id="bussinessJustification"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="additionalComments"> Additional
                                        Comments</label>
                                    <textarea class="form-control" rows="3" placeholder="Enter ..." id="additionalComments"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="attachFile">Attach file</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="attachFile">
                                            <label class="custom-file-label" for="attachFile">Choose file</label>
                                        </div>
                                        <div class="input-group-append">
                                            <span class="input-group-text">Upload</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <div class="col-md-3"></div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts {
    <script>
        let token = ''
        $(document).ready(function () {
            token = sessionStorage.getItem('token');
            if (!token) {
                window.location.replace("/auth")
            }
            else {
                $('#userInfo').html(sessionStorage.getItem('display_name') + '(' + sessionStorage.getItem('user_id') + ')');

            }
        })
    </script>
}
